# PhilGEPS Public Scraper Configuration
# This scraper uses public URLs and does NOT require authentication!

# Database Configuration
DATABASE_URL=sqlite:///data/philgeps_data.db
# Or for PostgreSQL: postgresql://user:password@localhost:5432/philgeps_scraper

# Scraper Settings
SCRAPE_INTERVAL_MINUTES=1440  # 1440 for daily (24 hours)
MAX_RETRIES=3
REQUEST_DELAY_SECONDS=2

# Date Filtering (Optional)
# Special values:
#   "AUTO"      - Scrapes yesterday and today (recommended for daily incremental scraping)
#   "TODAY"     - Scrapes only today's published bids
#   "YESTERDAY" - Scrapes only yesterday's published bids
# Or use specific dates: DD-MMM-YYYY (e.g., "13-Nov-2025")
# Leave empty to scrape all bids
FILTER_PUBLISH_DATE_FROM=
FILTER_PUBLISH_DATE_TO=

# Classification Filtering (Optional)
# Options: 1=Civil Works, 2=Goods, 3=General Support Services, 4=Consulting Services
# Leave empty to scrape all classifications
FILTER_CLASSIFICATION=

# Business Category Filtering (Optional)
# Leave empty to scrape all business categories
FILTER_BUSINESS_CATEGORY=

# Browser Settings
HEADLESS_MODE=true
BROWSER_TYPE=chromium  # chromium, firefox, webkit
BROWSER_TIMEOUT=30000  # 30 seconds

# Persistent Browser Profile (Recommended)
# Saves cookies/session between runs - reduces detection
USE_PERSISTENT_PROFILE=true
USER_DATA_DIR=browser_profile

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Settings (for production deployment)
# Leave empty for development (uses default http://localhost:8000/api)
# For production, set to your server URL
VITE_API_URL=
